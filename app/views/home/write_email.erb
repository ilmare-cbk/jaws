<div>
	<div class="container write_email">
		<div class="row">
			<div class="col-lg-12">
				<h1>Contact</h1>
				<form action="/home/email_send" method="POST">
					<p>To</p> <input type="text" name="to" style="width: 50%;">
					<% if user_signed_in? %>
					<p>From</p> <input type="text" name="from" value="<%=current_user.email%>" style="width: 50%;">
					<% else %>
					<p>From</p> <input type="text" name="from" placeholder="Fill in this with your email address" style="width: 50%;">
					<% end %>
					<p>Subject</p> <input type="text" name="title" style="width: 50%;">
					<p>Body</p> <textarea name="content" style="width: 50%;"></textarea><br>
					<input type="submit" value="Send">
				</form>
			</div>
		</div>
	</div>
</div>